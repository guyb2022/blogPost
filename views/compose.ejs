<%- include("partials/header") -%>
<h1>Compose</h1>
<form class="item" action="/compose" method="post">
  <div class="form-group">
    <label>Title</label>
    <input type="text" name="postTitle" class="form-control">
  </div>
  <div class="form-group">
    <label>Post</label>
    <textarea name="postBody" rows="8" cols="80" class="form-control"></textarea>
  </div>
  <div class="form-group">
    <button type="submit" name="button" class="btn btn-primary">Publish</button>
  </div>
</form>
<%- include("partials/footer") -%>
